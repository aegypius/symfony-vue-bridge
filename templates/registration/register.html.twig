{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <h1>Register</h1>

    {% form_theme registrationForm 'form/vue.html.twig' %}

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, { attr: { title: 'Register now !', novalidate: 'true' }}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.birthdate) }}
        {{ form_row(registrationForm.password.first) }}
        {{ form_row(registrationForm.password.second) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}

{% endblock %}
